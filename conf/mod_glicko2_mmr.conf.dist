[worldserver]

###################################################################################################
# BATTLEGROUND GLICKO-2 MMR SYSTEM CONFIGURATION
###################################################################################################

#
#    BattleGround.MMR.Enable
#        Description: Enable or disable the Glicko-2 MMR system for battlegrounds
#        Default:     0 (disabled)
#

BattleGround.MMR.Enable = 0

#
#    BattleGround.MMR.StartingRating
#        Description: Starting rating for new players
#        Default:     1500.0
#

BattleGround.MMR.StartingRating = 1500.0

#
#    BattleGround.MMR.StartingRD
#        Description: Starting rating deviation (RD) for new players
#                     Higher values mean more uncertainty about the player's skill
#        Default:     200.0
#

BattleGround.MMR.StartingRD = 200.0

#
#    BattleGround.MMR.StartingVolatility
#        Description: Starting volatility for new players
#                     Measures consistency of performance
#        Default:     0.06
#

BattleGround.MMR.StartingVolatility = 0.06

#
#    BattleGround.MMR.SystemConstant
#        Description: System volatility constraint parameter (Tau)
#                     Lower values = more conservative rating changes
#                     Higher values = more volatile rating changes
#        Default:     0.5
#

BattleGround.MMR.SystemConstant = 0.5

#
#    BattleGround.MMR.MMRWeight
#        Description: Weight of skill rating in combined score calculation
#                     Combined score = (MMR * MMRWeight) + (GearScore * GearWeight)
#        Default:     0.7
#

BattleGround.MMR.MMRWeight = 0.7

#
#    BattleGround.MMR.GearWeight
#        Description: Weight of gear score in combined score calculation
#                     Combined score = (MMR * MMRWeight) + (GearScore * GearWeight)
#        Default:     0.3
#

BattleGround.MMR.GearWeight = 0.3

###################################################################################################
# BATTLEGROUND QUEUE RELAXATION CONFIGURATION
###################################################################################################

#
#    BattleGround.MMR.QueueRelaxation.Enable
#        Description: Enable MMR range relaxation over time in queue
#                     Allows wider MMR differences as players wait longer
#        Default:     1 (enabled)
#

BattleGround.MMR.QueueRelaxation.Enable = 1

#
#    BattleGround.MMR.QueueRelaxation.InitialTolerance
#        Description: Initial MMR range tolerance (in rating points)
#                     Players within this range can be matched immediately
#        Default:     200.0
#

BattleGround.MMR.QueueRelaxation.InitialTolerance = 200.0

#
#    BattleGround.MMR.QueueRelaxation.IntervalSeconds
#        Description: How often (in seconds) to expand the MMR range
#        Default:     120 (2 minutes)
#

BattleGround.MMR.QueueRelaxation.IntervalSeconds = 120

#
#    BattleGround.MMR.QueueRelaxation.StepMMR
#        Description: How much to increase MMR range at each interval
#        Default:     100.0
#

BattleGround.MMR.QueueRelaxation.StepMMR = 100.0

#
#    BattleGround.MMR.QueueRelaxation.MaxSeconds
#        Description: Maximum time (in seconds) to continue relaxing MMR range
#                     After this time, any MMR difference is acceptable
#        Default:     600 (10 minutes)
#

BattleGround.MMR.QueueRelaxation.MaxSeconds = 600

###################################################################################################
# ARENA GLICKO-2 SYSTEM CONFIGURATION
###################################################################################################

#
#    Glicko2.Arena.Enabled
#        Description: Enable Glicko-2 ratings for arenas (replaces standard arena ratings)
#                     Provides separate ratings for each bracket (2v2, 3v3, 5v5)
#        Default:     0 (disabled)
#

Glicko2.Arena.Enabled = 0

#
#    Glicko2.Arena.InitialRating
#        Description: Starting rating for new arena players
#        Default:     1500.0
#

Glicko2.Arena.InitialRating = 1500.0

#
#    Glicko2.Arena.InitialRatingDeviation
#        Description: Starting rating uncertainty (RD) for new arena players
#        Default:     350.0
#

Glicko2.Arena.InitialRatingDeviation = 350.0

#
#    Glicko2.Arena.InitialVolatility
#        Description: Starting volatility for new arena players
#        Default:     0.06
#

Glicko2.Arena.InitialVolatility = 0.06

#
#    Glicko2.Arena.Tau
#        Description: System volatility constraint for arenas
#        Default:     0.5
#

Glicko2.Arena.Tau = 0.5

###################################################################################################
# ARENA MATCHMAKING - PER BRACKET CONFIGURATION
###################################################################################################

#
#    Glicko2.Arena.2v2.Matchmaking.InitialRange
#        Description: Initial MMR range for 2v2 arena matchmaking (in rating points)
#        Default:     150.0
#
#    Glicko2.Arena.2v2.Matchmaking.MaxRange
#        Description: Maximum MMR range after full relaxation (in rating points)
#        Default:     800.0
#
#    Glicko2.Arena.2v2.Matchmaking.RelaxationRate
#        Description: Rate at which MMR range expands per 30 seconds of queue time
#                     (rating points per 30 seconds)
#        Default:     15.0
#

Glicko2.Arena.2v2.Matchmaking.InitialRange = 150.0
Glicko2.Arena.2v2.Matchmaking.MaxRange = 800.0
Glicko2.Arena.2v2.Matchmaking.RelaxationRate = 15.0

#
#    Glicko2.Arena.3v3.Matchmaking.InitialRange
#        Description: Initial MMR range for 3v3 arena matchmaking (in rating points)
#        Default:     200.0
#
#    Glicko2.Arena.3v3.Matchmaking.MaxRange
#        Description: Maximum MMR range after full relaxation (in rating points)
#        Default:     1000.0
#
#    Glicko2.Arena.3v3.Matchmaking.RelaxationRate
#        Description: Rate at which MMR range expands per 30 seconds of queue time
#                     (rating points per 30 seconds)
#        Default:     12.0
#

Glicko2.Arena.3v3.Matchmaking.InitialRange = 200.0
Glicko2.Arena.3v3.Matchmaking.MaxRange = 1000.0
Glicko2.Arena.3v3.Matchmaking.RelaxationRate = 12.0

#
#    Glicko2.Arena.5v5.Matchmaking.InitialRange
#        Description: Initial MMR range for 5v5 arena matchmaking (in rating points)
#        Default:     250.0
#
#    Glicko2.Arena.5v5.Matchmaking.MaxRange
#        Description: Maximum MMR range after full relaxation (in rating points)
#        Default:     1200.0
#
#    Glicko2.Arena.5v5.Matchmaking.RelaxationRate
#        Description: Rate at which MMR range expands per 30 seconds of queue time
#                     (rating points per 30 seconds)
#        Default:     10.0
#

Glicko2.Arena.5v5.Matchmaking.InitialRange = 250.0
Glicko2.Arena.5v5.Matchmaking.MaxRange = 1200.0
Glicko2.Arena.5v5.Matchmaking.RelaxationRate = 10.0

